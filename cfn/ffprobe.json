{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Get metadata from an mp4 file using ffprobe",

  "Parameters": {
    "CodeBucket": {
      "Description": "The bucket where the Lambda function can be found",
      "Type": "String"
    },

    "CodeKey": {
      "Description": "The key of the Lambda function",
      "Type": "String"
    }
  },

  "Resources": {
    "Lambda": {
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Code": {
          "S3Bucket" : { "Ref": "CodeBucket" },
          "S3Key" : { "Ref": "CodeKey" }
        },
        "Description" : "Get the metadata from an mp4 file using ffprobe",
        "FunctionName" : "s3strm-ffprobe",
        "Handler" : "ffprobe.lambda_handler",
        "MemorySize" : "128",
        "Role" : {"Fn::GetAtt": ["Role", "Arn"]},
        "Runtime" : "python2.7",
        "Timeout" : "120"
      },
      "DependsOn": [ "Role" ]
    },

    "LambdaInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "Principal": "sns.amazonaws.com",
        "SourceArn": { "Fn::Join": [ "", [
          "arn:aws:sns:",
          { "Ref": "AWS::Region" },
          ":",
          { "Ref": "AWS::AccountId" },
          ":*"
        ]]},
        "FunctionName": { "Fn::GetAtt": [ "Lambda", "Arn" ] }
      }
    },

    "Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": { "Service": "lambda.amazonaws.com" },
            "Action": "sts:AssumeRole"
          }]
        },
        "Path": "/",
        "Policies": [{
          "PolicyName": "s3strm-ffprobe",
          "PolicyDocument": {
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "logs:CreateLogGroup",
                  "logs:CreateLogStream",
                  "logs:PutLogEvents"
                ],
                "Resource": "arn:aws:logs:*:*:*"
              },
              {
                "Effect": "Allow",
                "Action": [ "s3:*" ],
                "Resource": {
                  "Fn::Join": [ "", [
                    "arn:aws:s3:::",
                    { "Fn::ImportValue": "s3strm-movies-bucket" },
                    "/*"
                  ]]
                }
              },
              {
                "Effect": "Allow",
                "Action": [ "s3:*" ],
                "Resource": {
                  "Fn::Join": [ "", [
                    "arn:aws:s3:::", { "Ref": "CodeBucket" }, "/*" ]
                  ]
                }
              }
            ]
          }
        }]
      }
    }
  },

  "Outputs": {
    "LambdaArn": {
      "Value": { "Fn::GetAtt": [ "Lambda", "Arn" ] }
    }
  }
}
